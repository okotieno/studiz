{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "node16",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "maxNodeModuleJsDepth": 10,
    "allowJs": true,
    "moduleResolution": "Node16",
    "target": "es2021"
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
